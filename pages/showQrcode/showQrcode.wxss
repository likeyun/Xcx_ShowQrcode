.container {
	width: 100%;
	margin: 0 auto;
}

.desc {
	width: calc(90% - 30px);
	background: #fff;
	padding: 15px;
	border-radius: 5px;
	display: block;
	margin: 20px auto;
	font-size: 15px;
	text-align: center;
}

.container image {
	width: 90%;
	display: block;
	margin: 0 auto;
}

.error {
	text-align: center;
	margin-top: 100px;
	color: #666;
	background: #fff;
	width: 80%;
	margin: 30px auto 0;
	padding: 20px;
	border-radius: 10px;
}